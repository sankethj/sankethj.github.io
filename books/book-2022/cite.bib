@book{Pontes2022,
 abstract = {This book provides a holistic evidence-based perspective on conceptual, clinical, assessment, and treatment aspects of key non-substance-based addictive disorders related to: gambling, gaming, social media, smartphone, internet, love, sex, exercise, work, and shopping. Each chapter focuses on a different addictive disorder and is structured in a user-friendly way to enable the reader fast navigation, yet the main aspects of the respective disorders are covered in the necessary depth. All in all, this book offers a timely, self-contained introduction to both key concepts and the latest scientific developments in behavioral addictions. It addresses mental health practitioners, researchers in psychology, neuroscience and communication, and undergraduate and postgraduate students alike.},
 author = {Pontes, HM},
 doi = {10.1007/978-3-031-04772-5},
 eprint = {https://doi.org/10.1007/978-3-031-04772-5},
 keywords = {behavioral addictions, psychology, addiction},
 publisher = {Springer Cham},
 title = {Behavioral Addictions: Conceptual, Clinical, Assessment, and Treatment Approaches},
 url = {https://doi.org/10.1007/978-3-031-04772-5},
 year = {2022}
}